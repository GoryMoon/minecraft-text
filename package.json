{
  "name": "@gorymoon/minecraft-text",
  "version": "1.0.1",
  "description": "Wrapper and parser of minecraft text",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "test": "jest",
    "coverage": "jest --collectCoverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "prepare": "yarn run build",
    "preversion": "yarn test && yarn lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "minecraft",
    "text",
    "color",
    "json"
  ],
  "author": "Gustaf JÃ¤rgren",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoryMoon/minecraft-text"
  },
  "bugs": "https://github.com/GoryMoon/minecraft-text/issues",
  "homepage": "https://github.com/GoryMoon/minecraft-text",
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
